<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <CheckBox
        android:text="Apple"
        android:id="@+id/chkBoxApple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </CheckBox>

    <CheckBox
        android:text="Mango"
        android:id="@+id/chkBoxMango"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </CheckBox>

    <CheckBox
        android:text="Banana"
        android:id="@+id/chkBoxBanana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </CheckBox>

    <CheckBox
        android:text="Grapes"
        android:id="@+id/chkBoxGrapes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </CheckBox>

    <CheckBox
        android:text="Watermelon"
        android:id="@+id/chkBoxWatermelon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </CheckBox>


</LinearLayout>
